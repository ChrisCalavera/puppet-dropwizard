[Unit]
Description=Dropwizard [<%= @name %>] Service
After=syslog.target network.target

[Service]
Type=simple
User=<%= @user %>
Group=<%= @group %>
ExecStart=/bin/java -jar <%= @_jar_file %> server "<%= @_config_files.join(',') %>"
Restart=on-failure
RestartSec=30s

[Install]
WantedBy=multi-user.target

