[Unit]
Description=Dropwizard [<%= @name %>] Service
After=syslog.target network.target

[Service]
Type=simple
User=<%= @user %>
Group=<%= @group %>
ExecStart=/bin/java -jar <%= @root_path %>/<%= @name %>/<%= @name %>-<%= @version %>.jar server <%= @conf_path %>/<%= @name %>.yaml
Restart=on-failure
RestartSec=30s

[Install]
WantedBy=multi-user.target

